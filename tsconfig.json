{
  "compilerOptions": {
    "target": "es6",
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react",
    "module": "ESNext",
    "declaration": true,
    "declarationDir": "",
    "sourceMap": true,
    "outDir": "lib",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": true,
    "paths": {
      "@/*": ["./src/*"],
      "@/styles": ["./src/assets/styles/*"]
    }
  },
  "include": ["**/*.d.ts", "*.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "lib",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest"
  ],
  "types": ["typePatches"]
}
